<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userdetails"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/w3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="#F0DADA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:id="@+id/ll1">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_person_pin_24"
                    android:background="@drawable/circle"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign_Up"
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="-25dp"
                android:rotation="45"
                android:id="@+id/i1"
                android:layout_below="@+id/ll1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/square"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/i1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter name"
                    android:id="@+id/udname"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:drawableLeft="@drawable/ic_baseline_person_add_24"
                    android:inputType="text">
                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter email"
                    android:id="@+id/udemail"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:layout_marginTop="5dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp">
                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter number"
                    android:id="@+id/udnumber"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_phone_black_24dp">
                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter 1st security number"
                    android:id="@+id/ud1sno"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_phone_black_24dp">
                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter 2nd security number"
                    android:id="@+id/ud2sno"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_phone_black_24dp">
                </EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter 3rd security number"
                    android:id="@+id/ud3sno"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_phone_black_24dp">
                </EditText>

                <Button
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="25dp"
                    android:text="Save"
                    android:background="@color/colorPrimary"
                    android:id="@+id/udsave"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black">
                </Button>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>