<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="@drawable/w3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="#F0DADA">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:id="@+id/ll1">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/login"
                    android:background="@drawable/circle"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign_Up"
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="-25dp"
                android:rotation="45"
                android:id="@+id/i1"
                android:layout_below="@+id/ll1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/square"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/i1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter email"
                    android:textSize="24dp"
                    android:id="@+id/s_email"></EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter password"
                    android:textSize="24dp"
                    android:id="@+id/s_password"></EditText>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></RelativeLayout>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Sign_Up"
                    android:background="@color/colorPrimary"
                    android:id="@+id/s_signup"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black"
                    android:layout_gravity="center"></Button>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Already A user? Click Here"
                    android:textSize="20dp"
                    android:id="@+id/s_login"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-medium"></TextView>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>