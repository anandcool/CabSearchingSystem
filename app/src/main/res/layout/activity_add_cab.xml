<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Name"
        android:textSize="15dp"
        android:id="@+id/name">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Number"
        android:textSize="15dp"
        android:inputType="number"
        android:id="@+id/number">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Email"
        android:textSize="15dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter License Number Plate"
        android:textSize="15dp"
        android:inputType="text"
        android:id="@+id/licensenumberplate">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:hint="Latitude of the cab driver"
        android:id="@+id/latitude"
        android:fontFamily="sans-serif-medium"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:hint="Longitude of the cab driver"
        android:id="@+id/longitude"
        android:fontFamily="sans-serif-medium">
    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:text="Add"
        android:id="@+id/add"
        android:fontFamily="sans-serif-medium"
        android:background="@color/colorPrimary"
        android:textColor="@color/white">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:hint="Search for location"
            android:id="@+id/place">
        </EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Search"
            android:id="@+id/search"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimary"
            android:textColor="@color/white">
        </Button>

    </LinearLayout>

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapc"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddCab" />

    </LinearLayout>

</LinearLayout>