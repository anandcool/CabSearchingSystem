<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@drawable/w3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_height="50dp"
            android:layout_width="160dp"
            android:text="Security Message"
            android:id="@+id/securitymessage"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            ></Button>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="40dp"></RelativeLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="LOGOUT"
            android:drawableRight="@drawable/ic_baseline_person_pin_24"
            android:id="@+id/logout"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"></Button>

    </LinearLayout>

<fragment
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="4"
    tools:context=".UserSide.userdriver" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="If, Any problem click on the security meausres"
        android:gravity="center"
        android:textSize="15dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#3F51B5">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Blue marker is your location and magenta is Driver Location"
        android:gravity="center"
        android:textSize="15dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#3F51B5">
    </TextView>

</LinearLayout>